# Django templates
*.html linguist-language=HTML
templates/** linguist-language=HTML

# JavaScript
*.js linguist-language=JavaScript
static/js/** linguist-language=JavaScript

# CSS
*.css linguist-language=CSS
static/css/** linguist-language=CSS

