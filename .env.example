# Chave secreta - Gere uma nova para produção
# Use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=sua-chave-secreta-super-segura-de-50-caracteres

# URL base do projeto
BASE_URL=https://martinssmrr.pythonanywhere.com

# ========================================
# Mercado Pago - TESTE
# ========================================

# Credenciais de TESTE (funcionam para desenvolvimento)
MERCADO_PAGO_ACCESS_TOKEN=TEST-670245024946802-072912-dfb6ad5c56cb6035967f242ed3954945-2591616010
MERCADO_PAGO_PUBLIC_KEY=TEST-904751a5-1896-435e-a6b3-2c283764c93a

